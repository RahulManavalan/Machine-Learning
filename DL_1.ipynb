from fastai.vision import * 
from fastai.metrics import error_rate 

path = untar_data(URLs.PETS) 
path_anno = path/'annotations' 
path_img = path/'images' 

fnames = get_image_files(path_img) 
pat = r"/([^/]+)_\d+.jpg$"

data = ImageDataBunch.from_name_re(path_img,fnames,pat,bs=16,ds_tfms=get_transforms(),size=224).normalize(imagenet_stats) 
learn = cnn_learner(data,models.resnet50,metrics=error_rate) 
learn.lr_find() 
learn.recorder.plot() 
learn.fit_one_cycle(8) 
learn.save('stage-1-50')

learn.unfreeze() 
learn.fit_one_cycle(3,max_lr = slice(1e-6,1e-4))

learn.load('stage-1-50')
intrep = ClassificationInterpretation.from_learner(learn) 
losses , idx  =intrep.top_losses()
intrep.plot_top_losses(5,figsize=(10,7)) 
intrep.plot_confusion_matrix(figsize=(12,12) , dpi = 60) 
intrep.most_confused(min_val=2)

